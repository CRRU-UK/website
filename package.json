{
  "name": "crru-website",
  "private": true,
  "scripts": {
    "start": "next start",
    "build": "next build",
    "dev": "NODE_ENV=development next dev",
    "test": "npm run test:eslint && npm run test:stylelint && npm run test:typescript && npm run test:unit",
    "test:eslint": "eslint .",
    "test:stylelint": "stylelint 'src/**/*.scss'",
    "test:typescript": "tsc --noEmit",
    "test:unit": "jest --coverage",
    "test:unit:watch": "npm run test:unit -- --watchAll"
  },
  "dependencies": {
    "@contentful/live-preview": "^4.6.3",
    "@contentful/rich-text-plain-text-renderer": "^17.0.0",
    "@contentful/rich-text-react-renderer": "^16.0.1",
    "contentful": "^11.3.3",
    "dayjs": "^1.11.13",
    "joi": "^17.13.3",
    "next": "^15.1.2",
    "next-seo": "^6.6.0",
    "nodemailer": "^6.9.16",
    "react": "^19.0.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@next/eslint-plugin-next": "^15.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.17.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.16.2",
    "sass": "^1.83.0",
    "stylelint": "^16.12.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
